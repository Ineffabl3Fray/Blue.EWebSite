@model ProductModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>Edit</h1>

    <h4>ProductModel</h4>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input name="Products.Id" value="@Model.Products.Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Products.Name" class="control-label"></label>
                    <input asp-for="Products.Name" class="form-control" />
                    <span asp-validation-for="Products.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Products.Description" class="control-label"></label>
                    <input asp-for="Products.Description" class="form-control" />
                    <span asp-validation-for="Products.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Categories</label>
                    <select asp-for="Products.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                    <span asp-validation-for="Products.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Products.InStock" /> @Html.DisplayNameFor(model => model.Products.InStock)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Products.StockQuantity" class="control-label"></label>
                    <input asp-for="Products.StockQuantity" class="form-control" />
                    <span asp-validation-for="Products.StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Products.UnitPrice" class="control-label"></label>
                    <input asp-for="Products.UnitPrice" class="form-control" />
                    <span asp-validation-for="Products.UnitPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
