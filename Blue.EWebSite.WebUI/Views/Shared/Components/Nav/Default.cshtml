@model CardViewModel

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">


<style>
    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .count-notif {
        margin-right: -12px;
        padding-right: 8px;
        margin-top: -20px;
        font-size: 13px;
    }

    #profile:hover {
        background-color: #24A3EC;
        transition: all .45s ease-in;
    }

    #cart:hover a {
        background-color: #24A3EC;
        transition: all .45s ease-in;
    }

    #cart:hover span {
        background: linear-gradient(90deg, #070000 0%, #4c0001 50%, #070000 100%);
        transition: all .45s ease-in;
    }

    .searchbar {
        margin-bottom: auto;
        margin-top: auto;
        height: 60px;
        background-color: #353b48;
        border-radius: 30px;
        padding: 10px;
    }

    .search_input {
        color: white;
        border: 0;
        outline: 0;
        background: none;
        width: 0;
        caret-color: transparent;
        line-height: 40px;
        transition: width 0.4s linear;
    }

    .searchbar:hover > .search_input {
        padding: 0 10px;
        width: 350px;
        caret-color: red;
        transition: width 0.4s linear;
    }

    .searchbar:hover > .search_icon {
        background: white;
        color: #e74c3c;
    }

    .search_icon {
        height: 40px;
        width: 40px;
        float: right;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        color: white;
        text-decoration: none;
    }
</style>


<div class="container">

    <nav class="navbar navbar-expand-lg" style="user-select: auto;">
        <div class="collapse navbar-collapse" id="navbarColor01" style="user-select: auto;">
            <ul class="navbar-nav mr-auto" style="user-select: auto;">
                <li class="nav-item active" style="user-select: auto;">
                    <a class="nav-link pl-0" href="#" style="user-select: auto;">Anasayfa <span class="sr-only" style="user-select: auto;">(current)</span></a>
                </li>
                <li class="nav-item" style="user-select: auto;">
                    <a class="nav-link" href="#" style="user-select: auto;">Hakkımızda</a>
                </li>
                <li class="nav-item" style="user-select: auto;">
                    <a class="nav-link" href="#" style="user-select: auto;">İletişım</a>
                </li>
                <li class="nav-item" style="user-select: auto;">
                    <a class="nav-link" href="#" style="user-select: auto;">MÜŞTERİ HİZMETLERİ: 0212 444 55 66</a>
                </li>
            </ul>

            <ul class="navbar-nav" style="user-select: auto;">
                <li class="nav-item mr-1" style="user-select: auto;">
                    <a class="nav-link" href="#" style="user-select: auto;"><i class="fa fa-user pr-1"></i>Üyelik İşlemleri</a>
                </li>
                <li class="nav-item" style="user-select: auto;">
                    <a class="nav-link" href="#" style="user-select: auto;"><i class="fa fa-shopping-cart pr-1"></i>Sepetim</a>
                </li>
            </ul>
        </div>
    </nav>
    <hr />
    <nav class="navbar navbar-expand-lg" style="user-select: auto;">
        <a class="navbar-brand" href="#" style="user-select: auto;">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="user-select: auto;">
            <span class="navbar-toggler-icon" style="user-select: auto;"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01" style="user-select: auto;">

            <form class="form-inline ml-auto" style="user-select: auto;">
                <div class="d-flex justify-content-center h-100 mr-1">
                    <div class="searchbar">
                        <input class="search_input" type="text" name="" placeholder="Search...">
                        <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
                    </div>
                </div>
            </form>

            <ul class="navbar-nav " style="user-select: auto;">
                <li class="nav-item mr-1" style=" user-select: auto;">
                    <a id="profile" class="nav-link btn btn-lg mr-3 mt-0 border-secondary rounded-circle w-100" href="#" style="user-select: auto;"> <i class="fa fa-user"></i> </a>
                </li>

                <div class="btn-group">
                    <div id="cart">
                        <i><span class="badge badge-primary badge-pill mt-0 count-notif">0</span></i>
                        <a class="border-secondary ml-1 pb-2 mb-3nav-link btn rounded-circle " href="#" style="user-select: auto;">
                            <img src="https://hemencdn.com/eticaret/img/icon-cart.png" class=" p-2 cart-icon-standard" alt="Cart" style="user-select: auto;">
                        </a>
                    </div>
                </div>

                @if (Model.Product == null)
                {
                    <div class="dropdown">
                        <button type="button" class="dropdown-toggle ml-1 bg-transparent btn text-primary " data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                            0,00TL
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <label class="dropdown-item">Sepete ürün eklenmedi.</label>
                            <label class="dropdown-item">Ara Toplam: 0,00TL</label>
                            <label class="dropdown-item">Toplam: 0,00TL</label>

                            <div class="dropdown-divider"></div>
                            <button class="btn btn-secondary mr-2" style="float: right;" type="button">Sepetime Git</button>
                            <button class="btn btn-info mr-2" style="float: right;" type="button">Kasaya Git</button>
                        </div>
                    </div>
                }

                else
                {
                    <div class="dropdown">
                        <button type="button" class="dropdown-toggle ml-1 bg-transparent btn text-primary " data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false">
                            @Model.Product.UnitPrice TL.
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <label class="dropdown-item"> @Model.Product.Name @Model.Product.UnitPrice TL</label>
                            <label class="dropdown-item">Ara Toplam: 1.000,00TL</label>
                            <label class="dropdown-item">Toplam: 2.503,00TL</label>

                            <div class="dropdown-divider"></div>
                            <button class="btn btn-secondary mr-2" style="float: right;" type="button">Sepetime Git</button>
                            <button class="btn btn-info mr-2" style="float: right;" type="button">Kasaya Git</button>
                        </div>
                    </div>
                }
            </ul>

        </div>
    </nav>
</div>

<nav class="navbar navbar-expand-lg navbar-light" style="user-select: auto; background-color: #24a2ec;">

    <div class="container">
        <ul class="navbar-nav " style="user-select: auto;">

            @foreach (var item in Model.Categories)
            {
                <li class="nav-item" style="user-select: auto;">
                    <a class="nav-link text-light" href="#" style="user-select: auto;">@item.Name</a>
                </li>
            }

        </ul>
    </div>
</nav>
