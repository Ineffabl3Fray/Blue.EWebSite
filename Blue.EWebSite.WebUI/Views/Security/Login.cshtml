@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<br />

<form asp-controller="Security" asp-action="Register" method="post" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="UserName" type="text" class="col-md-2 col-form-label" />
        <div class="col-md-10">
            <input asp-for="UserName" type="text" name="UserName" value="@Model.UserName" class="form-control" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" type="text" class="col-md-2 col-form-label" />
        <div class="col-md-10">
            <input asp-for="Password" type="password" name="Password" value="@Model.Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-10">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
    </div>

</form>